{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx", 
    "components/Layout/components/menu.jsx", 
    "components/Layout/index.jsx", 
    "components/Layout/components/sidebar.jsx", 
    "components/Layout/components/user-nav.jsx"  
, "components/HomePage/main-nav.jsx", "components/HomePage/layout.jsx", "middlewarec.js", "pages/sign-up/[[...sign-up]]/page.tsx", "components/Auth/login-form.jsx", "components/Auth/register-form.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}
